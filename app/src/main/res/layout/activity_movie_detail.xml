<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".views.MovieDetailActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/moviePoster"
            android:layout_width="160dp"
            android:layout_height="202dp"
            android:layout_marginTop="70dp"
            android:layout_marginStart="95dp"/>

        <LinearLayout
            android:id="@+id/linearLayoutButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignTop="@id/moviePoster"
            android:layout_alignEnd="@id/moviePoster"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="32dp">

            <ImageButton
                android:id="@+id/watchedButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/baseline_remove_red_eye_24"
                android:background="@drawable/floatingbutton_shape"
                android:backgroundTint="@color/GulfStream"
                android:layout_marginStart="16dp"/>

            <ImageButton
                android:id="@+id/deleteButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/baseline_delete_24"
                android:backgroundTint="@color/GulfStream"
                android:background="@drawable/floatingbutton_shape"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_below="@id/linearLayout">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@color/Cyprus"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Synopsis"
            android:textColor="@color/GulfStream"
            android:textStyle="bold"
            android:textSize="22dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"/>

        <EditText
            android:id="@+id/synopsisEditText"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:background="@drawable/cyprus_border"
            android:layout_marginTop="10dp"
            android:padding="10dp" />

        <TextView
            android:id="@+id/genreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genre"
            android:textColor="@color/Cyprus"
            android:textSize="22dp"
            android:layout_marginTop="25dp"/>

    </LinearLayout>

</RelativeLayout>